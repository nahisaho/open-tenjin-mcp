{
  "name": "open-tenjin-mcp",
  "version": "1.2.0",
  "description": "Educational data MCP server providing Japanese curriculum guidelines, textbooks, and educational materials",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-data",
    "copy-data": "cp -r src/data dist/",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "./deploy.sh build",
    "docker:start": "./deploy.sh start",
    "docker:dev": "./deploy.sh dev",
    "docker:stop": "./deploy.sh stop",
    "docker:logs": "./deploy.sh logs",
    "docker:status": "./deploy.sh status",
    "docker:clean": "./deploy.sh clean"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "education",
    "japan",
    "curriculum",
    "textbook",
    "educational-materials",
    "learning-guidelines"
  ],
  "author": "Open Tenjin MCP Contributors",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nahisaho/open-tenjin-mcp"
  },
  "bugs": {
    "url": "https://github.com/nahisaho/open-tenjin-mcp/issues"
  },
  "homepage": "https://github.com/nahisaho/open-tenjin-mcp#readme"
}